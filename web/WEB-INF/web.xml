<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/Index/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/Login/403.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/Login/404.html</location>
    </error-page>
    <security-constraint>
        <display-name>mantenimiento</display-name>
        <web-resource-collection>
            <web-resource-name>mantenimiento</web-resource-name>
            <description/>
            <url-pattern>/faces/sys/mantenimiento/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrador</role-name>
            <role-name>Operador</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>gestionUsuario</display-name>
        <web-resource-collection>
            <web-resource-name>gestionUsuario</web-resource-name>
            <description/>
            <url-pattern>/faces/sys/gestionUsuario/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrador</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>matriculaAlumno</display-name>
        <web-resource-collection>
            <web-resource-name>matriculaAlumno</web-resource-name>
            <description/>
            <url-pattern>/faces/sys/matriculaAlumno/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrador</role-name>
            <role-name>Operador</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>programacionCiclo</display-name>
        <web-resource-collection>
            <web-resource-name>programacionCiclo</web-resource-name>
            <description/>
            <url-pattern>/faces/sys/programacionCiclo/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrador</role-name>
            <role-name>Operador</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>registroNota</display-name>
        <web-resource-collection>
            <web-resource-name>registroNota</web-resource-name>
            <description/>
            <url-pattern>/faces/sys/registroNota/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrador</role-name>
            <role-name>Operador</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>reporte</display-name>
        <web-resource-collection>
            <web-resource-name>reporte</web-resource-name>
            <description/>
            <url-pattern>/faces/sys/reporte/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrador</role-name>
            <role-name>Operador</role-name>
            <role-name>Asistente</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Todo</display-name>
        <web-resource-collection>
            <web-resource-name>Todo</web-resource-name>
            <description/>
            <url-pattern>/faces/sys/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrador</role-name>
            <role-name>Operador</role-name>
            <role-name>Asistente</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcRealm</realm-name>
        <form-login-config>
            <form-login-page>/Login/login.jsp</form-login-page>
            <form-error-page>/Login/loginerror.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Administrador</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Operador</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Asistente</role-name>
    </security-role>
</web-app>
